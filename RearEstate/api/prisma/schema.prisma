generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model post {
  id          String      @id @default(auto()) @map("_id") @db.ObjectId
  tieuDe      String
  gia         Int
  images      String[]
  diaChi      String
  tinhThanh   String
  kinhDo      String
  viDo        String
  mucDich     mucDich
  loaiNhaDat  loaiNhaDat
  createdAt   DateTime    @default(now())
  user        User        @relation(fields: [userId], references: [id])
  userId      String      @db.ObjectId
  postDetail  PostDetail?
}

enum mucDich {
  mua
  thue
}

enum loaiNhaDat {
  canHoChungCu
  nhaRieng
  nhaBietThu
  nhaMatPho
  nhaPhoThuongMai
  dat
  datNenDuAn
  trangTraiKhuNghiDuong
  khoNhaXuong
}

enum noiThat {
  nhaTrong
  noiThatDayDu
}

model PostDetail {
  id         String  @id @default(auto()) @map("_id") @db.ObjectId
  moTa       String
  mucDich    String?
  noiThat    noiThat
  dienTich   Int?
  truongHoc  Int?
  sieuThi    Int?
  benhVien   Int?
  congVien   Int?
  Post       post    @relation(fields: [postId], references: [id])
  postId     String  @unique @db.ObjectId
}

model User {
  id         String      @id @default(auto()) @map("_id") @db.ObjectId
  email      String      @unique
  username   String      @unique
  password   String
  avatar     String?
  createdAt  DateTime    @default(now())
  Posts      post[]
}

